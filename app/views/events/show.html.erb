<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8">
        <img src="<%= @event.image_url %>" alt="">
        <h2><%= @event.title %></h2>
        <p><%= @event.description %></p>
        <p>Start: <%= @event.start_date.strftime("%A, %B %d, %Y - %H:%M") %></p>
        <p>End: <%= @event.end_date.strftime("%A, %B %d, %Y - %H:%M") %></p>
        <% unless @event.attendees.empty? %>
          <h3>Attendants</h3>
          <ul>
          <% @event.attendees.each do |attendee| %>
            <li><%= link_to attendee.name, user_path(attendee) %></li>
          <% end %>
          </ul>
        <% end %>
        <% if author?(@event) %>
          <p>
            <%= link_to "Edit event", edit_event_path(@event) %> |
             <%= link_to "Delete event", event_path(@event), method: :delete,
                                        data: { confirm: "Are you sure?"} %>
          </p>
        <% end %>
      </div>
      <div class="col-md-4">
        <p>TO FILL.</p>
      </div>
    </div>
  </div>
</div>
