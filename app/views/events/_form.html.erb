<%= form_for @event, html: { multipart: true } do |f| %>
  <%= render "error_messages", object: @event %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: "11", class: "form-control" %>

  <div class="form-group event-start-date row">
    <div class="col">
      <%= f.label :start_date, class: "event-date-label" %>
    </div>
    <div class="col-md-auto">
      <%= f.datetime_select :start_date, start_year: Time.now.year,
        end_year: Time.now.year + 1, class: "form-control custom-select" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= f.label :end_date, class: "event-date-label" %>
    </div>
    <div class="col-md-auto">
      <%= f.datetime_select :end_date, start_year: Time.now.year,
        end_year: Time.now.year + 1, class: "form-control custom-select" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :image %>
    </div>
    <div class="col-md-10 col-event-image">
      <%= image_tag(@event.image_url(:medium)) if @event.image? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block mt-4" %>
<% end %>
