<div class="container-fluid">
  <div class="container">

    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 col-xl-8">

        <h2 class="text-center mt-2rem mb-2rem">
          Membership Request
        </h2>

        <div class="d-flex flex-column mt-4 mb-2">
          <%= render "membership_request_received",
            membership_request: @membership_request %>
        </div>

        <div class="mt-2 text-center">
          <% if @membership_requests_received.size > 1 %>
            <%= link_to "See all membership requests",
              user_membership_requests_path(@user) %>
          <% end %>
        </div>

      </div>
    </div>

  </div>
</div>
