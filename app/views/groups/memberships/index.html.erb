<% cache [@organizers, @members] do %>

  <div class="container-fluid bg-light">
    <div class="container">

      <%= render partial: "application/breadcrumbs" %>

      <div class="row">
        <div class="col-md-12 mt-3">

          <div class="row mb-2rem">
            <div class="col">

              <div class="organizers mb-4">
                <h2 class="mb-0">
                  <%= organizer_title %>
                </h3>
                <div class="row">
                  <%= render partial: "groups/user",
                    collection: @organizers.reverse, as: :user,
                    locals: { group: @group } %>
                </div>
              </div>

              <div class="members mb-4">
                <h2 class="mt-2rem mb-0">
                  <%= members_title_with_count %>
                </h3>
                <div class="row">
                  <%= render partial: "groups/user",
                    collection: @members.reverse, as: :user,
                    locals: { group: @group } %>
                </div>
              </div>

              <%= link_to "Go back to group", group_path(@group) %>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

<% end %>
