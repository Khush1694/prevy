<header class="container-fluid bg-light">
  <div class="container">

    <div class="row">
      <div class="col-md-12 mt-4">
        <div class="row mb-2rem">

          <div class="col-md-8">
            <div class="group-box">

              <div class="group-box-big-image group-image card card-inverse">
                <%= image_tag(@group.image_url,
                  class: "img-fluid card-img-top") %>
                <div class="card-img-overlay">
                  <h2 class="h4 group-box-title">
                    <%= @group.name%>
                  </h2>
                </div>
              </div>

            </div>
          </div>

          <div class="col-md-4">
            <div class="box group-info-box p-3">

              <div class="group-owner">
                <h3 class="h4 mb-3">
                  <%= organizer_title %>
                </h3>
                <ul>
                  <% @group.organizers.last(5).each do |organizer| %>
                    <li>
                      <%= link_to organizer.name, user_path(organizer) %>
                    </li>
                  <% end %>
                </ul>
              </div>

              <div class="members-preview mt-3">
                <% if has_membership?(current_user, @group) %>
                  <h3 class="h4 mb-3">
                    <%= members_title_with_count %>
                  </h3>
                  <ul>
                    <% @group.members_with_role.last(5).each do |member| %>
                      <li>
                        <%= link_to member.name, user_path(member) %>
                      </li>
                    <% end %>
                  </ul>
                  <%= see_all_members_link(@group, quantity: 5) %>
                <% elsif @group.members_with_role.count > 0 %>
                  <h3 class="h4 mb-3">
                    <%= "Member".pluralize(@group.members_with_role.count) %>
                  </h3>
                  <p class="h5">
                    <%= @group.members_with_role.count %>
                  </p>
                <% end %>
              </div>

              <% if has_organizer_role?(current_user, @group) %>
                <div class="group-options">
                  <%= link_to "Create event", new_group_event_path(@group),
                    class: "btn btn-primary btn-block btn-lg mt-3" %>
                </div>
              <% end %>

              <% unless has_membership?(current_user, @group) %>
                <div class="group-membership">
                  <h4 class="h5">Would you like to be part?</h4>
                  <%= membership_button(@group) %>
                </div>
              <% end %>

            </div>
          </div>

        </div>
      </div>
    </div><!-- /.row -->

  </div>
</header>


<!-- Group Description -->


<div class="container-fluid">
  <div class="container">

    <div class="row mt-2 mb-2">
      <div class="col-md-8">
        <p><%= sanitize @group.description %></p>
      </div>
    </div>

  </div>
</div>


<!-- Upcoming Events -->


<% if has_membership?(current_user, @group) || !@group.private %>
  <div class="container-fluid bg-light">
    <div class="container">

      <div class="row">
        <div class="col-md-12 mb-4">

          <div class="row mt-2rem mb-4">
            <div class="col">

              <% if @group.events.upcoming %>
                <h2 class="text-center">Upcoming</h2>
                <div class="row d-flex justify-content-center">
                  <%= render @events %>
                </div>
              <% else %>
                <h2 class="text-center">There are no upcoming events</h2>
              <% end %>

              <% if @group.events.upcoming.count > 9 %>
                <div class="row">
                  <div class="col-auto mx-auto mt-2rem mb-2rem">
                    <%= link_to "See more upcoming events",
                      group_events_path(@group),
                      class: "btn btn-primary btn-lg" %>
                  </div>
                </div>
              <% end %>

            </div>
          </div>

          <% if current_user == @group.owner %>
            <div class="row mt-2rem mb-2">
              <div class="col text-center">
                <%= link_to "Create event",
                  new_group_event_path(@group, group_name: @group.name, group_id: @group.id),
                    class: "btn btn-primary btn-lg" %>
              </div>
            </div>
          <% end %>

        </div>
      </div><!-- /.row -->

    </div>
  </div>
<% end %>


<!-- Members -->


<% if has_membership?(current_user, @group) %>
  <div class="container-fluid members-container">
    <div class="container">

      <div class="row mt-4 mb-4">
        <div class="col-md-12">
          <h2 class="text-center">
            <%= "Member".pluralize(@group.members_with_role.count) %>
          </h2>
          <ul>
            <% @group.members_with_role.last(12).each do |member| %>
              <li><%= link_to member.name, user_path(member) %></li>
            <% end %>
          </ul>
          <%= see_all_members_link(@group, quantity: 12) %>
        </div>
      </div>

    </div>
  </div>
<% end %>
