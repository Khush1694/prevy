<%= form_for @group, html: { multipart: true } do |f| %>
  <%= render "error_messages", object: @group %>

  <div class="form-group box p-4 mt-2rem mb-2rem">
    <h3 class="mb-4">1. Group info</h3>

    <div class="form-group">
      <%= f.label :name %>
      <small class="text-muted">Required *</small>
      <%= f.text_field :name, class: "form-control",
        required: true %>
    </div>

    <div class="form-group mb-0">
      <%= f.label :description %>
      <small class="text-muted">Required *</small>
      <%= f.hidden_field :description, required: true %>
      <trix-editor input="group_description" class="form-control">
      </trix-editor>
    </div>
  </div>

  <div class="form-group box p-4 mb-2rem">
    <h3 class="mb-4">
      2. Image
      <small class="text-muted ml-010rem">Required *</small>
    </h3>

    <div class="form-group mb-0">
      <%= f.label :image, hidden: true %>
      <%= image_tag(@group.image_url, class: "img-fluid mb-2rem") if
        @group.image? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>
  </div>

  <div class="form-group box p-4 mb-2rem">
    <h3 class="mb-4">3. Privacy</h3>

    <div class="form-group group-private">
      <h4 class="mb-4">Make group private?</h4>
      <div class="row">
        <div class="col-md-1">
          <%= f.radio_button :private, true, checked: true,
            class: "form-control" %>
        </div>

        <div class="col-md-11">
          <%= f.label :private, "Yes", value: true %>
          <ul class="radio-button-list">
            <li class="font-italic">
              Users would need to ask for an invite to be part of the group.
            </li>
            <li class="font-italic">
              Members and events would be visible only to group members.
            </li>
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-1">
          <%= f.radio_button :private, false,
            class: "form-control" %>
        </div>
        <div class="col-md-11">
          <%= f.label :private, "No", value: false %>
        </div>
      </div>
    </div>

    <hr class="mt-4 mb-4">

    <div class="form-group group-visible">
      <h4 class="mb-4">Hide group?</h4>
      <div class="row">
        <div class="col-md-1">
          <%= f.radio_button :hidden, true, checked: true,
            class: "form-control" %>
        </div>
        <div class="col-md-11">
          <%= f.label :hidden, "Yes", value: true %>
          <ul class="radio-button-list">
            <li class="font-italic">
              Group would not appear in groups directory.
            </li>
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-1">
          <%= f.radio_button :hidden, false,
            class: "form-control" %>
        </div>
        <div class="col-md-11">
          <%= f.label :hidden, "No", value: false %>
        </div>
      </div>
    </div>

    <hr class="mt-4 mb-4">

    <div class="form-group group-visible mb-0">
      <h4 class="mb-4">Allow all members to create events?</h4>

      <div class="row">
        <div class="col-md-1">
          <%= f.radio_button :all_members_can_create_events, true,
            checked: true, class: "form-control" %>
        </div>
        <div class="col-md-11">
          <%= f.label :all_members_can_create_events, "Yes", value: true %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-1">
          <%= f.radio_button :all_members_can_create_events, false,
            class: "form-control" %>
        </div>
        <div class="col-md-11">
          <%= f.label :all_members_can_create_events, "No", value: false %>
        </div>
      </div>
    </div>

  </div>

  <% if current_user == @group.owner %>
    <div class="form-group box p-4 mb-2rem">
      <h3 class="mb-4">4. Danger zone</h3>

      <div class="form-group mb-0">
        <p class="font-italic">
          This action is not reversible. All events in this group would also be deleted.
        </p>
        <%= link_to "Delete group",
          group_path(@group, user_id: current_user.id),
          data: { confirm: "Are you sure you want to delete this group?" },
            method: :delete, class: "btn btn-danger btn-lg" %>
      </div>
    </div>
  <% end %>

  <%= f.submit yield(:button_text),
    class: "btn btn-primary btn-block btn-lg mt-4 mb-4" %>
<% end %>
