<div class="col-md-4">

  <div class="box group-info-box mt-4 mt-md-0 p-3">

    <div class="group-location">
      <h3 class="h4 mb-3 pb-1">
        Location
      </h3>
      <p>
        <%= location_icon %>
        <%= group.location %>
      </p>
    </div>

    <div class="organizers-preview">
      <h3 class="h4 mb-3">
        <%= organizer_title %>
      </h3>
      <ul>
        <% group.organizers.last(3).each do |organizer| %>
          <li>
            <%= link_to organizer.name,
              user_path(organizer, organizer_of: group) %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="members-preview mt-3">
      <h3 class="h4 mb-1">
        <%= members_title_with_count %>
      </h3>

      <% if authorized?(current_user, group) %>
        <ul class="mt-3">
          <% if !group.members_with_role.empty? %>
            <% group.members_with_role.last(3).each do |member| %>
              <li>
                <%= link_to member.name,
                  user_path(member, member_of: group) %>
              </li>
            <% end %>
          <% else %>
            <li>
              So far there are no members
            </li>
          <% end %>
        </ul>

        <%= see_all_members_link(group, quantity: 5) %>
      <% end %>
    </div>

  </div>

  <div class="box group-info-box mt-4 p-3">

    <% if authorized?(current_user, group) %>
      <div class="group-link mt-1">
        <%= button_tag "Copy group link", id: "btn-group-link",
          class: "btn btn-outline-primary btn-block btn-lg",
          data:
            {
              "clipboard-text": request.url,
              toggle:           "tooltip",
              placement:        "top",
              delay:            { hide: 200 }
            },
          title: "Copied!" %>
      </div>
    <% end %>

    <% if has_organizer_role?(current_user, group) %>
      <div class="group-options mt-3">
        <%= link_to "Create event", new_group_event_path(group),
          class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <% unless authorized?(current_user, group) %>
      <div class="group-membership">
        <h4 class="h5">Would you like to be part?</h4>
        <%= membership_button(group) %>
      </div>
    <% end %>

  </div>

</div>
