<div class="col-md-2 mt-2" id="user-<%= user.id %>">
  <div class="box member-box d-flex flex-column justify-content-center align-items-center pt-4 pb-3">
    <div class="member-image pl-4 pr-4">
      <%= link_to user_path(user, member_of: group) do %>
        <%= gravatar_image_tag user.email,
          class: "img-fluid", alt: user.name %>
      <% end %>
    </div>
    <div class="member-name mt-2">
      <%= link_to user.name,
        user_path(user, member_of: group) %>
    </div>

    <%= yield if block_given? %>
  </div>
</div>
